<script>
var slideIndex1 = 0;
showSlides1(1,0);

var slideIndex2 = 0;
showSlides2(1,0);

function showSlides1(n, t) {
  if(t == 1) {
    clearTimeout(time1);
  }
  var i;
  var slides = document.getElementsByClassName("mySlides1");
  var dots = document.getElementsByClassName("dot1");
  for (i = 0; i < slides.length; i++) {
    slides[i].style.display = "none";  
  }
  if(n == 1)
  {
    slideIndex1++;
    if (slideIndex1 > slides.length) {slideIndex1 = 1}
  }
  else if(n == -1)
  {
    slideIndex1--;
    if (slideIndex1 < 1) {slideIndex1 = slides.length}
  }
  for (i = 0; i < dots.length; i++) {
    dots[i].className = dots[i].className.replace(" active", "");
  }
  slides[slideIndex1-1].style.display = "block";  
  dots[slideIndex1-1].className += " active";
  time1 = setTimeout(function(){showSlides1(1,0);}, 3000); // Change image every 2 seconds
}

function showSlides2(n, t) {
  if(t == 1) {
    clearTimeout(time2);
  }
  var i;
  var slides = document.getElementsByClassName("mySlides2");
  var dots = document.getElementsByClassName("dot2");
  for (i = 0; i < slides.length; i++) {
    slides[i].style.display = "none";  
  }
  if(n == 1)
  {
    slideIndex2++;
    if (slideIndex2 > slides.length) {slideIndex2 = 1}
  }
  else if(n == -1)
  {
    slideIndex2--;
    if (slideIndex2 < 1) {slideIndex2 = slides.length}
  }
  for (i = 0; i < dots.length; i++) {
    dots[i].className = dots[i].className.replace(" active", "");
  }
  slides[slideIndex2-1].style.display = "block";  
  dots[slideIndex2-1].className += " active";
  time2 = setTimeout(function(){showSlides2(1,0);}, 3000); // Change image every 2 seconds
}
</script>

